<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/log_reg_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DARK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav"
        app:itemIconTint="#7C7C7C"
        app:itemTextColor="#7C7C7C"
        />

    <com.example.movieapp.ViewPager.CustomViewPager
        android:id="@+id/regLogContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/mainContainer"
        app:layout_constraintStart_toStartOf="@id/mainContainer"
        android:paddingBottom="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>